generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String

  todos    Todo[]
}

model Todo {
  id        Int      @id @default(autoincrement())
  title     String
  description String?
  date      String?
  category  String?
  isDone    Boolean  @default(false)
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}
